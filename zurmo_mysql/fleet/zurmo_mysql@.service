[Unit]
Description=Zurmo MySQL Database
After=docker.service
Requires=docker.service
Wants=zurmo_mysql_discovery@%i.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill zurmo_mysql.%i
ExecStartPre=-/usr/bin/docker rm zurmo_mysql.%i
ExecStartPre=/usr/bin/docker pull icclabcna/zurmo_mysql
ExecStart=/usr/bin/docker run --name zurmo_mysql.%i -p %i:3306 icclabcna/zurmo_mysql
ExecStop=/usr/bin/docker stop zurmo_mysql.%i
