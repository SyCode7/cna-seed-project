[Unit]
Description=Zurmo MySQL Database
After=docker.service
Requires=docker.service
Before=zurmo_mysql_cluster_discovery_node@%i.service
Before=zurmo_log_courier_mysql_cluster_node@%i.service
Requires=zurmo_mysql_cluster_discovery_node@%i.service
Requires=zurmo_log_courier_mysql_cluster_node@%i.service

[Service]
EnvironmentFile=/etc/environment
TimeoutStartSec=0
KillMode=none
Restart=always
ExecStartPre=-/usr/bin/docker kill zurmo_mysql_cluster_node.%i
ExecStartPre=-/usr/bin/docker rm zurmo_mysql_cluster.%i
ExecStart=/usr/bin/docker run --name zurmo_mysql_cluster_node.%i -p %i:3306 icclab/zurmo_mysql_cluster:${DOCKER_IMAGE_TAG}
ExecStop=/usr/bin/docker stop zurmo_mysql_cluster_node.%i
