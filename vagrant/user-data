#cloud-config

---
coreos:
  etcd:
    discovery: https://discovery.etcd.io/60c301ec4a7e239a3adff7e24fa4f98d
    addr: $public_ipv4:4001
    peer-addr: $public_ipv4:7001
    cluster-active-size: 5
  fleet:
    public-ip: $public_ipv4
    metadata: public=true
  units:
  - name: etcd.service
    command: start
  - name: fleet.service
    command: start
  - name: docker-tcp.socket
    command: start
    enable: true
    content: |
      [Unit]
      Description=Docker Socket for the API

      [Socket]
      ListenStream=2375
      Service=docker.service
      BindIPv6Only=both

      [Install]
      WantedBy=sockets.target
  - name: zurmo-predownload-docker-images.service
    command: start
    content: |
      [Unit]
      Description=Service to Pre-Download Docker Images for Zurmo
      Requires=etcd.service
      After=etcd.service

      [Service]
      EnvironmentFile=/etc/environment

      Type=oneshot

      ExecStartPre=/usr/bin/mkdir -p /tmp/zurmo
      ExecStartPre=/usr/bin/wget -P /tmp/zurmo https://raw.githubusercontent.com/icclab/cna-seed-project/master/init/preload-docker-images.sh
      ExecStartPre=/bin/chmod +x /tmp/zurmo/preload-docker-images.sh
      ExecStart=/bin/bash -c "/tmp/zurmo/preload-docker-images.sh;"

      [Install]
      WantedBy=multi-user.target
write_files:
- path: /etc/environment
  content: "COREOS_PUBLIC_IPV4=$public_ipv4 \nCOREOS_PRIVATE_IPV4=$private_ipv4 \nDOCKER_PRELOAD_ENABLED=True\nDOCKER_IMAGE_TAG=latest
    \nZURMO_INIT_GIT_BRANCH=master \nZURMO_INIT_ENABLE_DISCOVERY_SERVICES=true \nZURMO_INIT_DOWNLOAD_FLEET_FILES=true
    \nZURMO_INIT_START_SERVICES=true"
