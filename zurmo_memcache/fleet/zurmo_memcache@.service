[Unit]
Description=Zurmo Memcache
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill zurmo_memcache.%i
ExecStartPre=-/usr/bin/docker rm zurmo_memcache.%i
ExecStartPre=/usr/bin/docker pull icclabcna/zurmo_memcache
ExecStart=/usr/bin/docker run --name zurmo_memcache.%i -p %i:11211 icclabcna/zurmo_memcache
ExecStop=/usr/bin/docker stop zurmo_memcache.%i
